{{#each sortedItems as |item|}}
<hr>
<h3{{action 'itemLookup' item.name}}>{{#link-to 'item' item.name}} {{item.name}} {{/link-to}}</h3> x {{item.quantity}}<br>
<h4>Notes:</h4> <br>
<h5>Type: {{item.type}}</h5><br>
{{item.notes}}{{update-item item=item update='update' sendTo='sendTo'}}
<button class='btn btn-sm btn-danger'{{action 'delete' item}}>Delete Item?</button>
{{/each}}
